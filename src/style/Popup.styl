.popup-box {
  position: fixed;
  background: #00000050;
  width: 100%;
  height: 100vh;
  top: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.popup-mesg {
  position: relative;
  background: #fff;
  border-radius: 5px;
  padding: 20px;
  border: 1px solid #C4C4C4;
  box-shadow: 0 2px 6px 0 rgba(0,0,0,0.2);
  overflow: auto;
}

.popup-btn {
	border: none;
	background-color: white;
}

