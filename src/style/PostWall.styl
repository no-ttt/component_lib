.postwall-layout {
	position relative
	display flex
	align-items center
	justify-content center
}

.postwall-content {
	position absolute
	z-index 1
}

.postwall-img-overfit {
	overflow hidden
}

.postwall-cover {
	position relative
	width 100%
	height 100%
}

.postwall-cover::before {
	content " "
	width 100%
	height 100%
	position absolute
	background-color rgba(0, 0, 0, 0.5)
}

.postwall-cover:hover {
	transform scale(1.2, 1.2)
	transition all 1s ease-out
}

.postwall-no-cover {
	height 100%
}

.postwall-img {
	height 100%
	object-fit cover
}
