.post-layout {
	display flex
	flex-direction column
	justify-content center
	align-items center	
}

.post-pic {
	overflow hidden
	position relative
}

.post-cover {
	background-color black
	opacity 0
	position absolute
	border-radius 100%
}

.post-cover:hover {
	opacity 0.5
	transition all 0.5s ease-out
}

.post-image {
	object-fit cover
}

.post-des {
	margin-top 8px
}

.post-name {
	font-weight normal
}

.post-addr {
	display flex
	flex-direction row
}

.post-addr-txt {
	color rgba(0, 0, 0, 0.54)
	font-size 14px
}

.post-sort {
	display flex
	justify-content space-around
	flex-direction row
}

.post-image:hover {
	transform scale(1.2, 1.2)
	transition all 1s ease-out
}