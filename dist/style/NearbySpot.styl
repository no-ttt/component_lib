.nearby-spot {
	display flex
	justify-content space-between
	width 220px
	height 90px
}

.nearby-spot-photo {
	width 100px
	height 100%
	object-fit cover
}

.nearby-spot-photo:hover {
	transform scale(1.2, 1.2)
	transition all 1s ease-out
}

.nearby-spot-des {
	height 100%
	display flex
	justify-content space-between
	flex-direction column
}

.nearby-spot-title {
	width 100px
	overflow hidden
	text-overflow ellipsis
	white-space nowrap
	text-decoration none
	color black
}

.nearby-spot-title:hover {
	cursor pointer
}

.nearby-spot-title-link {
	width 100px
	overflow hidden
	text-overflow ellipsis
	white-space nowrap
	text-decoration none
	color black
	display block
}

.nearby-spot-title-link:hover {
	text-decoration underline
	cursor pointer
}

.nearby-spot-link {
	font-size 12px
	color gray
	cursor pointer
	text-decoration: none
}

.nearby-spot-link:hover {
	color black
}

.nearby-spot-distance {
	font-size 14px
	color gray
}