.Carousel-item {
  display flex
  justify-content center
  align-items center
}

.Carousel {
  display flex
  flex-direction row
  align-items center
}

.Carousel_railWrapper {
  overflow hidden
  margin 15px
}

.Carousel_rail {
  display grid
  position relative
  transition left 0.5s cubic-bezier(0.2, 1, 0.3, 1) 0s
}

.Carousel_btn {
  border none
  width 40px
  height 40px
  display flex
  justify-content center
  align-items center
}

.Carousel_btn:hover {
	border-radius 100%
	background-color #e9e9e9
}
