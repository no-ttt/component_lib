.hintImg-layout {
	position relative
	display flex
	justify-content center
}

.hintImg-cover {
	position absolute
	background-color rgba(0, 0, 0, 0.6)
	opacity 0
	width 100%
	height 100%
	transition all 1s ease-out
}

.hintImg-layout:hover .hintImg-cover {
	opacity 1
}

.hintImg-txt {
	position absolute
	opacity 0
	transform translatey(150%)
	transition all 1s ease-out
	font-size 14px
	display -webkit-box	
	-webkit-box-orient vertical
	-webkit-line-clamp 5
	overflow hidden
	width 90%
	color white
	text-align center
}

.hintImg-des-height {
	min-height 35%
}

.hintImg-layout:hover .hintImg-txt {
	opacity 1
	transform translatey(100%)
}

.hintImg-hr {
	border-top 1px solid white
	margin 10px 0 10px 0
	width 100%
}

.hintImg-bg {
	object-fit cover
	width 100%
	height 100%
}

