.travelCard-layout {
	display: flex;
	flex-direction: column;
}

.travelCard-frame {
	border: 1px #C4C4C4 solid;
	box-shadow: 0 2px 6px 0 rgba(0,0,0,0.2);
  transition: 0.3s;
	display: flex;
	justify-content: center;
}

.travelCard-frame:hover {
  box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
}

.travelCard-pic {
	object-fit: cover;	
	margin-top: 10px;
}

.travelCard-des {
	margin-top: 10px;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
}

.travelCard-title {
	font-weight: bold;
}

.travelCard-people {
	display: flex;
	flex-direction: row;
}

.travelCard-people-txt {
	margin-left: 5px;
}

.travelCard-time-txt {
	margin-top: 10px;
	margin-left: 5px;
	color: gray;
}