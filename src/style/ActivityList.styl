.activity-layout {
	display flex
	flex-direction row
}

.activity-item-block {
	overflow-y auto
	margin-left 20px
}

.activity-item {
	min-width 360px
	height 55px
	border 1px #C4C4C4 solid
	border-radius 5px
	padding 10px 10px 0px 10px
	margin-bottom 10px
	cursor pointer
}

.activity-item:hover {
	box-shadow 0 4px 4px 0 rgba(0, 0, 0, 0.2)
	transition all .2s ease-in-out
}

.activity-item-date {
	color #FF6983
	font-size 12px
	margin-bottom 5px
}

.activity-detail {
	display flex
	justify-content space-between
	align-items center
}

.activity-name {
	overflow hidden
	text-overflow ellipsis
	white-space nowrap
}

#style-3::-webkit-scrollbar-track {
	-webkit-box-shadow inset 0 0 0 rgba(0, 0, 0, 0.3)
	background-color #eeeeee
	border-radius 5px
}

#style-3::-webkit-scrollbar {
	width 8px
	background-color white
}

#style-3::-webkit-scrollbar-thumb {
	background-color rgb(196, 196, 196)
	border-radius 5px
}
