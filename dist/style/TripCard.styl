.trip-card-frame {
	border 1px #C4C4C4 solid
	box-shadow 0 2px 6px 0 rgba(0,0,0,0.2)
	transition 0.3s
	display flex
	align-items center
	background-color white
	padding 10px
}

.trip-card-frame:hover {
	box-shadow 0 8px 16px 0 rgba(0, 0, 0, 0.2)
}

.trip-card-img {
	object-fit cover
	width 160px
	height 150px
	margin-right 20px
}

.trip-card-delete-btn {
	width 40px
	height 40px
}

.trip-card-delete-btn:hover {
	border-radius 100%
	background-color #e9e9e9
}

.trip-card-add-remark {
	width fit-content
	padding 5px
	font-size 14px
	display flex
	flex-direction row
	align-items center
	margin 20px 0 0 -10px
	border-radius 5px
}

.trip-card-add-remark:hover {
	background-color #e9e9e9
}

.trip-card-title-link {
	width 200px
	overflow hidden
	text-overflow ellipsis
	white-space nowrap
	text-decoration none
	color black
	display block
}

.trip-card-title-link:hover {
	text-decoration underline
	cursor pointer
}

.trip-card-address {
	width 200px
	overflow hidden
	text-overflow ellipsis
	white-space nowrap
	font-size 14px
}