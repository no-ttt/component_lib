.searchbox_block {
	position: relative;
	display: inline-block;
}

.searchbox_icon {
	position: absolute;
	left: 10px;
  top: calc(50% - 0.5em);
}

.searchbox_input {
	border: 1px #C4C4C4 solid;
	box-shadow: 0 2px 6px 0 rgba(0,0,0,0.2);
	border-radius: 30px;
	outline: none;
}

.searchbox_block input {
  text-indent: 40px;
}