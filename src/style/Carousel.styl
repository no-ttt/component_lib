.layout {
	display: flex;
	flex-direction: row;
}

.slider {
  position: relative;
  width: 300px;
  height: 200px;
  margin: 32px auto;
  box-shadow: 0 0 6px #666666;
}

.slider-slide {
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	opacity: 0;
	transition: all 0.5s ease-out;
}

.slider-slide-active {
	opacity: 1;
}

.slider-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}


