.comment-header {
	width 100%
	display flex
	justify-content space-between 
	align-items center 
}

.comment-title {
	display flex
	flex-direction row
	align-items center
}

.comment-user-name {
	font-size 18px
	font-weight bold
	margin-left 10px
}

.comment-thumbup {
	display flex
	justify-content space-between
	align-items center
	width 60px
}

.comment-content {
	margin-left 10px
	margin-top 5px
	font-size 15px
}

.comment-img-date {
	display flex
	justify-content space-between
	align-items flex-end
}

.comment-img-section {
	display flex
	flex-direction row
	margin-top 10px
	width 80%
	overflow-x auto
}

.comment-photo {
	width 120px
	height 120px
	margin-right 10px
	object-fit cover
}

.comment-date {
	font-size 10px
	margin-left 10px
	color gray
}

.comment-pin {
	display flex
	justify-content space-between
	align-items center
	width 40px
	background-color #FAECBB
	padding 3px 8px 3px 8px
	border-radius 30px
}

