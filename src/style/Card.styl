.card-frame {
	border: 1px #C4C4C4 solid;
	box-shadow: 0 2px 6px 0 rgba(0,0,0,0.2);
	transition: 0.3s;
	display: flex;
	justify-content: center;
}

.card-frame:hover {
	box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
}

.card-layout {
	display: flex;
	flex-direction: column;
}

.card-pic {
	object-fit: cover;	
	margin-top: 10px;
}

.card-des {
	margin-top: 10px;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
}

.card-title {
	font-weight: bold;
	font-size: 16px;
	width: 200px;
	text-overflow: ellipsis;
	white-space: nowrap;
	overflow: hidden;
}

.card-people {
	display: flex;
	flex-direction: row;
}

.card-people-txt {
	margin-left: 5px;
	margin-top: 2px;
	font-size: 14px;
}

.card-time-txt {
	margin-top: 10px;
	margin-left: 5px;
	color: gray;
	font-size: 14px;
}