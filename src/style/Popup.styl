.popup-btn {
	border none
	background-color white
}

.popup-box {
  position fixed
  background rgba(255, 255, 255, 0.8)
  width 100%
  height 100vh
  top 0
  left 0
  display flex
  justify-content center
  align-items center
}

.popup-mesg {
  position relative
  background #fff
  padding 10px
  border-radius 3px
  border 1px #C4C4C4 solid
  box-shadow 0 2px 6px 0 rgba(0,0,0,0.2)
  overflow auto
}

.popup-header {
  display flex
  justify-content space-between
}

.popup-hr {
  border-top 1px solid #C4C4C4
  width 100%
  margin-top 10px
  margin-bottom 10px
}

.popup-no-header-content {
  display flex
  justify-content center
  align-items center
  weight 100%
  height 99%
}

.popup-content {
  display flex
  justify-content center
  align-items center
  weight 100%
  height 86%
}
