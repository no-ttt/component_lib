.post-layout {
	display flex
	flex-direction column
	justify-content center
	align-items center	
}

.post-overfit {
	overflow hidden
}

.post-pic {
	position relative
	width 100%
	height 100%
}

.post-cover {
	background-color black
	opacity 0
	position absolute
	border-radius 100%
	width 100%
	height 100%
}

.post-cover:hover {
	opacity 0.5
	transition all 0.5s ease-out
}

.post-image {
	object-fit cover
}

.post-des {
	margin-top 10px
}

.post-image:hover {
	transform scale(1.2, 1.2)
	transition all 1s ease-out
}