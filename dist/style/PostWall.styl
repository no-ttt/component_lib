.postwall-layout {
	position: relative;
	display: flex;
	align-items: center;
	justify-content: center;
}

.postwall-img-overfit {
	overflow: hidden;
	width: 100%;
	height: 100%;
}

.postwall-cover {
	position: relative;
	width: 100%;
	height: 100%;
}

.postwall-cover::before {
	content: " ";
	width: 100%;
	height: 100%;
	position: absolute;
	background-color: rgba(0, 0, 0, 0.5);
}

.postwall-cover:hover {
	transform: scale(1.2, 1.2);
	transition: all 1s ease-out;
}

.postwall-no-cover {
	position: relative;
	width: 100%;
	height: 100%;
}

.postwall-img {
	width: 100%;
	height: 100%;
	object-fit: cover;
}

/* content */
.postwall-title {
	position: absolute;
	z-index: 1;
	font-size: 30px;
	font-family: "cwTeXFangSong", serif;
	color: white;
}

.postwall-des-layout {
	width: 140px;
	display: flex;
	justify-content: space-between;
	position: absolute;
	z-index: 1;
	margin-top: 50px;
}

.postwall-des {
	font-family: "cwTeXFangSong", serif;
	color: white;
}

@import url(https://fonts.googleapis.com/earlyaccess/cwtexfangsong.css);