.hintImg-no-cover {
	position relative
	width 100%
	height 100%
	display flex
	justify-content center
}

.hintImg-cover {
	position relative
	width 100%
	height 100%
	display flex
	justify-content center
}

.hintImg-cover::before {
	content " "
	position absolute
	width 100%
	height 100%
	background-color rgba(0, 0, 0, 0.4)
}

.hintImg-txt {
	position absolute
	opacity 0
	transform translatey(900%)
	transition all 1s ease-out
}

.hintImg-cover:hover .hintImg-txt {
	opacity 1
	transform translatey(600%)
}

.hintImg-no-cover:hover .hintImg-txt {
	opacity 1
	transform translatey(600%)
}

.hintImg-bg {
	object-fit cover
	width 100%
}

