.Carousel {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.Carousel_railWrapper {
  overflow: hidden;
}

.Carousel_rail {
  display: grid;
  position: relative;
  transition: left 0.5s cubic-bezier(0.2, 1, 0.3, 1) 0s;
}

.Carousel_btn {
  border-radius: 100%;
  border: none;
  width: 30px;
  height: 30px;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f1eded;
}

.Carousel_btn:hover {
  background-color: #f8f5f5;
  opacity: 0.8;
}
