.postcard-frame {
	width: 800px;
	height: 200px;
	border: #C4C4C4 1px solid;
	border-radius: 5px;
	display: flex;
	flex-direction: row;
}

.postcard-image {
	width: 300px;
	height: 180px;
	margin-top: 10px;
	margin-left: 10px;
}

.postcard-intro {
	margin-top: 15px;
	margin-left: 15px;
	padding-right: 5px;

}

.postcard-title {
	font-size: 22px;
	font-weight: bold;
}

.postcard-des {
	font-size: 16px;
	margin-top: 15px;
	color: grey;
}

.postcard-loc {
	display: flex;
	flex-direction: row;
	margin-top: 20px;
}

.postcard-addr {
	font-size: 16px;
	margin-left: 10px;
}