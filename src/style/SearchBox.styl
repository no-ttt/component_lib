#searchbox-content {
	padding 6px 0px
	border 1px #C4C4C4 solid
	border-radius 30px	
	box-shadow 0 2px 6px 0 rgba(0,0,0,0.2)
}

.searchbox-block {
	position relative
	display inline-block
	min-width 100px
	min-height 30px
	margin 4px 8px
	// border 1px red solid
}

.searchbox-icon {
	position absolute
	left 16px
	top calc(50% - 0.5em)
}

.searchbox-input {
	border none
	outline none
	width 95%
	height 95%
	text-indent 45px	
}

.searchbox-dropdown-content-option {
	display flex
	justify-content flex-start
	align-items center
	background-color white
	color black
	padding 12px 16px
	border-radius 10px
	text-decoration none
}

.searchbox-dropdown-content-option:hover {
	background-color #f1f1f1
	border-radius 0
}

.searchbox-dropdown-content-option-active {
	background-color #f1f1f1
	border-radius 0
	display flex
	justify-content flex-start
	align-items center
	color black
	padding 12px 16px
	text-decoration none
}

.searchbox-dropdown-link {
	text-decoration none
	color black
	display block
}

